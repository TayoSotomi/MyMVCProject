@page
@model MyRazorApplication1.Pages.Categories.DeleteModel


<form method="post">
    <input asp-for="CategoryDelete.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3 row p-1" Disable>
        <label asp-for="CategoryDelete.Name" class="p-0"></label>
        <input asp-for="CategoryDelete.Name" clas.s="form-control" disabled />

    </div>
    <div class="mb-3 row p-1" Disable>
        <label asp-for="CategoryDelete.DisplayOrder" class="p-0"></label>
        <input asp-for="CategoryDelete.DisplayOrder" class="form-control" disabled />

    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-page="/categories/index" class="btn btn-outline-secondary form-control">Back to list</a>
        </div>
    </div>
</form>
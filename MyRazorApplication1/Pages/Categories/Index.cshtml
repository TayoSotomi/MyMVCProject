@page
@model MyRazorApplication1.Pages.Categories.IndexModel


<div class="Container">
    <div class="row p-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bg-info bi-plus-circle"></i> Add Category
                </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped text-center">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Dispaly Order
            </th>
            <th>
                Edit /  Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-Page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            Edit
                        </a>
                        <a asp-Page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>